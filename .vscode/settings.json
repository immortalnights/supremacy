{
    "editor.tabSize": 4,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "prettier.configPath": "./.prettierrc.yaml",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/dist": true
    },
    "eslint.enable": true,
    "eslint.options": {},
    "eslint.workingDirectories": ["./src"],
    "[json]": {
    "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
