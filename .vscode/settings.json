{
    "editor.tabSize": 4,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/dist": true
    },
    "eslint.enable": true,
    "eslint.options": {
        "configPath": "./eslintrc.cjs"
    },
    "eslint.workingDirectories": ["./client", "./server"]
}
